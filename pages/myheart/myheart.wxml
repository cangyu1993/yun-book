<!--pages/myheart/myheart.wxml-->
<view class='blue-part'>
  <view class='head'>
    <view>
      <image src='{{userInfo.avatarUrl}}' class='img'></image>
    </view>
    <view>
      <view class='name'>{{userInfo.nickName}}</view>
      <view class='name-show'>醒，亦在人间，梦，亦在人间</view>
    </view>
  </view>
  <view class='blue-1'>
    <view class='blue-1-1' bindtap='goldHouse'>
      <view class='nums'>{{booknums||'0'}}</view>
      <view>收藏</view>
    </view>
    <view class='blue-1-2'>
      <view class='nums'>4</view>
      <view>关注</view>
    </view>
  </view>
</view>

<view class='big-img'>
  <image src='../../static/img/339.jpg' class='img-1' bindtap='chooseImage'></image>
</view>

<image-cropper wx:if='{{showCut}}' id="image-cropper" limit_move="{{true}}" disable_rotate="{{true}}" width="{{width}}" height="{{height}}" imgSrc="{{src}}" bindload="cropperload" bindimageload="loadimage" bindtapcut="clickcut"></image-cropper>