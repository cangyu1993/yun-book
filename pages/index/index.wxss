/**index.wxss**/

.index .slide-image {
  width: 710rpx;
  height: 350rpx;
}

.content-item {
  margin-top: 40rpx;
}

.content-item .title {
  font-size: 16px;
  padding-left: 20rpx;
  border-left: 2px solid #000;
  line-height: 32rpx;
  height: 32rpx;
}

.content-item .content {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.content .box-l .img {
  width: 230rpx;
  height: 320rpx;
}

.box-r .book-title {
  font-size: 16px;
  color: #333;
}

.box-r {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.box-r .book-desc{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  line-height: 1.5;
  color: #444;
  font-size: 12px;
}

.box-r .author {
  display: flex;
  justify-content: space-between;
  font-size: 10px;
}
.box-r .author .update-time{
  margin-right: 15rpx;
  color: red;
}
.box-r .author .category{
  margin-right: 15rpx;
}
.box-r .author .many{
  color: red;
}


.loading-more{
  display: flex;
  justify-content: center;
  height: 160rpx;
  align-items: center;
}
.loading-more .loadmore-img{
  height: 50rpx;
  width: 50rpx;
}
.loading-more text{
  position: relative;
  z-index: 998;
  margin-left: 10rpx;
}
.no-more{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 160rpx;
  margin-top: 40rpx;
  background: #f1f1f1;
  color: #888;
}
.no-more-text{
  position: relative;
  z-index: 998;
  width: 500rpx;
  background: #f1f1f1;
}
.line{
  position: absolute;
  z-index: 0;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 600rpx;
  height: 1rpx;
  background: #e9e9e9;
}